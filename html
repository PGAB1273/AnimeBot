    <h2>Select Anime</h2>
    <input type="text" id="anime-input" placeholder="Type anime name..." oninput="suggestAnime()">
    <div id="anime-suggestions"></div>

    <button onclick="saveSettings()">Save Settings</button>

    <script>
        function suggestAnime() {
            const input = document.getElementById("anime-input").value;
            const suggestions = ["Naruto", "One Piece", "Attack on Titan"]; // Example suggestions
            const filtered = suggestions.filter(anime => anime.toLowerCase().includes(input.toLowerCase()));

            const suggestionBox = document.getElementById("anime-suggestions");
            suggestionBox.innerHTML = "";
            filtered.forEach(anime => {
                const div = document.createElement("div");
                div.textContent = anime;
                suggestionBox.appendChild(div);
            });
        }

        function saveSettings() {
            // Implement logic to save settings (e.g., sending data to your server or Discord)
            console.log("Settings saved.");
            alert("Settings saved!"); // Notify the user
        }
    </script>
